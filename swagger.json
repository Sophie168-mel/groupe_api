{
  "openapi": "3.0.1",
  "info": {
    "title": "Groupe autostop",
    "description": "Projet qui vise à renseigner les utilisateurs sur des points d'autostop accessibles. L'utilisateur a la possibilité de visualiser les données avec différents formats: JSON, XML ou RDF/XML",
    "version": "1.0.0",
    "license": {
      "name": "M.I.T",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "externalDocs": {
    "description": "Find out more about our project",
    "url": "https://github.com/Sophie168-mel/groupe_api/"
  },
  "servers": [
    {
      "url": "https://groupmiashsm2api.herokuapp.com/"
    }
  ],
  "paths": {
    "/pouce": {
      "post": {
        "tags": [
          "Point"
        ],
        "summary": "Ajout des coordonnées GPS d'un nouvel emplacement d'autoroute dans la base",
        "operationId": "addPoint",
        "requestBody": {
          "description": "Vérifier que le format de données en entrée est accepté par le serveur",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Point"
              }
            },
            "application/xml": {
              "schema": {
                "$ref": "#/components/schemas/Point"
              }
            },
            "application/rdf+xml": {
              "schema": {
                "$ref": "#/components/schemas/Point"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Insertion OK",
            "content": {}
          },
          "406": {
            "description": "Header Accept not acceptable",
            "content": {}
          }
        },
        "x-codegen-request-body-name": "body"
      }
    },
    "/pouces": {
      "get": {
        "tags": [
          "Point"
        ],
        "summary": "Retourne les x premiers emplacements",
        "description": "Renvoie les données aux formats JSON, XML, RDF/XML",
        "operationId": "limit",
        "parameters": [
          {
            "name": "Limite",
            "in": "query",
            "description": "Status values that need to be considered for filter",
            "required": true,
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Limite"
                  }
                }
              },
              "application/xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "XZY"
                  },
                  "items": {
                    "$ref": "#/components/schemas/Limite"
                  }
                }
              },
              "application/rdf+xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "XZY"
                  },
                  "items": {
                    "$ref": "#/components/schemas/Limite"
                  }
                }
              }
            }
          },
          "406": {
            "description": "Header Accept not acceptable",
            "content": {}
          }
        }
      }
    },
    "/map": {
      "get": {
        "tags": [
          "Map"
        ],
        "summary": "Retourne les emplacements d'autostop dans un rayon autour d'un point déterminé par une latitude et une longitude",
        "description": "Plusieurs autostops peuvent etre retournés dans un rayon définit par sa longitude et sa latitude",
        "operationId": "find_per_ray",
        "parameters": [
          {
            "name": "rayon",
            "in": "query",
            "description": "Status values that need to be considered for filter",
            "required": true,
            "explode": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Latitude",
            "in": "query",
            "description": "Status values that need to be considered for filter",
            "required": true,
            "explode": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Longitude",
            "in": "query",
            "description": "Status values that need to be considered for filter",
            "required": true,
            "explode": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "XZY"
                  },
                  "items": {
                    "$ref": "#/components/schemas/Point"
                  }
                }
              },
              "application/rdf+xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "XZY"
                  },
                  "items": {
                    "$ref": "#/components/schemas/Point"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Point"
                  }
                }
              }
            }
          },
          "406": {
            "description": "Header Accept not acceptable",
            "content": {}
          }
        }
      }
    },
    "/map/count": {
      "get": {
        "tags": [
          "Map"
        ],
        "summary": "Retourne le nombre de points gps d'arrets d'autostop dans une échelle donnée",
        "description": "Renvoie tous les emplacements soit par département, par région ou commune",
        "operationId": "mapCount",
        "parameters": [
          {
            "name": "Granularité",
            "in": "query",
            "description": "Département ou Région ou Commune",
            "required": true,
            "explode": true,
            "schema": {
              "type": "string",
              "example": "Commune"
            }
          },
          {
            "name": "Valeur",
            "in": "query",
            "description": "Status values that need to be considered for filter",
            "required": true,
            "explode": true,
            "schema": {
              "type": "string",
              "example": "Montpellier"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "XZY"
                  },
                  "items": {
                    "$ref": "#/components/schemas/Map"
                  }
                }
              },
              "application/rdf+xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "XZY"
                  },
                  "items": {
                    "$ref": "#/components/schemas/Map"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Map"
                  }
                }
              }
            }
          },
          "406": {
            "description": "Header Accept not acceptable",
            "content": {}
          }
        }
      }
    },
    "/map/data": {
      "get": {
        "tags": [
          "Map"
        ],
        "summary": "Retourne le nombre de points gps d'arrets d'autostop dans un territoire à partir d'un identifiant de territoire",
        "description": "Plusieurs autostops peuvent etre retournés dans un rayon définit par sa longitude et sa latitude",
        "operationId": "map_data",
        "parameters": [
          {
            "name": "Id",
            "in": "query",
            "description": "Identifiant de territoire",
            "required": true,
            "explode": true,
            "schema": {
              "type": "integer",
              "example": "34000"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "XZY"
                  },
                  "items": {
                    "$ref": "#/components/schemas/id_territ"
                  }
                }
              },
              "application/rdf+xml": {
                "schema": {
                  "type": "array",
                  "xml": {
                    "name": "XZY"
                  },
                  "items": {
                    "$ref": "#/components/schemas/id_territ"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/id_territ"
                  }
                }
              }
            }
          },
          "406": {
            "description": "Header Accept not acceptable",
            "content": {}
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Point": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "Nom": {
            "type": "string"
          }
        },
        "xml": {
          "name": "Point"
        }
      },
      "Limite": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "Point": {
            "type": "string",
            "example": "Lyon-est"
          }
        },
        "xml": {
          "name": "Limite"
        }
      },
      "Map": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "Nombre de points": {
            "type": "integer",
            "example": "10"
          }
        },
        "xml": {
          "name": "Map"
        }
      },
      "id_territ": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "Nb_per_territ": {
            "type": "integer",
            "example": "50"
          }
        },
        "xml": {
          "name": "Territoire"
        }
      }
    }
  }
}